<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="me.verni.view.controler.MainController"
      spacing="20" alignment="CENTER" styleClass="background">

    <Button text="Zarządzaj użytkownikami" onAction="#handleUsers"
            styleClass="interactive-button" maxWidth="250"/>

    <Button text="Zarządzaj akcjami" onAction="#handleStocks"
            styleClass="interactive-button" maxWidth="250"/>

    <Button text="Zarządzaj transakcjami" onAction="#handleTransactions"
            styleClass="interactive-button" maxWidth="250"/>

    <Button text="Wejdź do symulatora" onAction="#handleSimulator"
            styleClass="interactive-button" maxWidth="250"/>
    <Button text="Zamknij" onAction="#handleClose"
            styleClass="interactive-button" maxWidth="250"/>
</VBox>
